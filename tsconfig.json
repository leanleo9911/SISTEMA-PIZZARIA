{
  // Visit https://aka.ms/tsconfig to read more about this file

  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/main.ts",
    "src/clientes/**/*.ts",
    "src/produtos/**/*.ts",
    "src/pedidos/**/*.ts",
    "src/relatorios/**/*.ts",
    "src/extras/**/*.ts"
  ]
}
